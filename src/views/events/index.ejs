<%- include('../partials/header', { title }) %>
<div class="card">
  <h2>Eventos</h2>
  <% if (currentUser && currentUser.is_admin) { %>
    <p><a href="/events/new" class="btn">Novo Evento</a></p>
  <% } %>
  <table class="table">
    <thead>
      <tr><th>Título</th><th>Data</th><th>Local</th><th>Descrição</th></tr>
    </thead>
    <tbody>
      <% if (events.length === 0) { %>
        <tr><td colspan="4">Nenhum evento cadastrado.</td></tr>
      <% } %>
      <% events.forEach(ev => { %>
        <tr>
          <td><a href="/events/<%= ev.id %>"><%= ev.title %></a></td>
          <td><%= new Date(ev.date).toLocaleString('pt-BR') %></td>
          <td><%= ev.location || '-' %></td>
          <td><%= ev.description || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>